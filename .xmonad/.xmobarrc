Config {
         font = "xft:Office Code Pro:antialias=true:size=8"
       , additionalFonts = [
           "xft:Office Code Pro:antialias=true:size=8:bold"
           ]
       , fgColor = "white"
       , alpha = 120
       , position = Bottom
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = False
       , pickBroadest = False
       , persistent = True
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = False
       , commands = [
                    Run Cpu ["-L","3","-H","50","--normal","green","--high","red","--template","Cpu: <total>%"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "<fn=1>%H:%M</fn> %d.%m.%y" "date" 10
                    , Run Kbd [("ru", "<fn=1><fc=#FF00FF>RU</fc></fn>"), ("us", "<fn=1><fc=#00CCFF>EN</fc></fn>")]
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %kbd% %date% <fc=#9F9F9F>%cpu% %memory% %swap%</fc> }\
                    \{\
                    \"
       }
